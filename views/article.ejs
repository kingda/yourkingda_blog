<%- include header %>
<p>
  <span><a class="edit" href="/remove/<%= post._id %>">删除</a></span>
</p>
<form method="post">
  标题：<br />
  <input type="text" name="title" value="<%= post.title %>" disabled="disabled" /><br />
  正文：<br />
  <% post_content=post.post;%>
  <textarea name="post" rows="20" cols="100"><%= post_content %></textarea><br />
  <input type="submit" value="保存修改" />
</form>
<%- include footer %>